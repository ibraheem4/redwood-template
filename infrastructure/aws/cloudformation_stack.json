{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation stack for deploying web and API applications using ECR and ECS.",
  "Resources": {
    "PostgresDB": {
      "Type": "AWS::RDS::DBInstance",
      "DeletionPolicy": "Snapshot",
      "Properties": {
        "DBName": "MyDatabase",
        "AllocatedStorage": "20",
        "DBInstanceClass": "db.t3.micro",
        "Engine": "postgres",
        "EngineVersion": "14.9",
        "MasterUsername": "masteruser",
        "MasterUserPassword": "masteruserpassword",
        "VPCSecurityGroups": [
          {
            "Ref": "AppSecurityGroup"
          }
        ],
        "DBSubnetGroupName": {
          "Ref": "MyDBSubnetGroup"
        },
        "MultiAZ": false,
        "PubliclyAccessible": true,
        "StorageType": "gp2"
      }
    },
    "AppSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group for RDS and Web Access",
        "VpcId": "vpc-030595db95854cc41",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 5432,
            "ToPort": 5432,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "MyDBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "A DBSubnetGroup for MyDatabase",
        "SubnetIds": ["subnet-09cba449eb7170193", "subnet-0917c46b110f7258d"]
      }
    },
    "WebAppRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": "stencil-auth0-web"
      }
    },
    "ApiAppRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": "stencil-auth0-api"
      }
    },
    "ECSCluster": {
      "Type": "AWS::ECS::Cluster"
    },
    "WebAppService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "Cluster": {
          "Ref": "ECSCluster"
        },
        "DesiredCount": 2,
        "LaunchType": "FARGATE",
        "TaskDefinition": {
          "Ref": "WebAppTaskDefinition"
        },
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": ["subnet-09cba449eb7170193", "subnet-0917c46b110f7258d"],
            "SecurityGroups": [
              {
                "Ref": "AppSecurityGroup"
              }
            ],
            "AssignPublicIp": "ENABLED"
          }
        }
      }
    },
    "WebAppTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "stencil-auth0-web-task",
        "Cpu": "256",
        "Memory": "512",
        "NetworkMode": "awsvpc",
        "RequiresCompatibilities": ["FARGATE"],
        "ExecutionRoleArn": {
          "Ref": "ECSTaskExecutionRole"
        },
        "ContainerDefinitions": [
          {
            "Name": "web-container",
            "Image": "aws_account_id.dkr.ecr.region.amazonaws.com/stencil-auth0-web:latest",
            "PortMappings": [
              {
                "ContainerPort": 80,
                "HostPort": 80
              }
            ]
          }
        ]
      }
    },
    "ECSTaskExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AmazonECSTaskExecutionRolePolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "ecr:GetAuthorizationToken",
                    "ecr:BatchCheckLayerAvailability",
                    "ecr:GetDownloadUrlForLayer",
                    "ecr:GetRepositoryPolicy",
                    "ecr:DescribeRepositories",
                    "ecr:ListImages",
                    "ecr:DescribeImages",
                    "ecr:BatchGetImage",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "WebAppRepositoryURI": {
      "Description": "URI for the web application's ECR repository",
      "Value": {
        "Fn::GetAtt": ["WebAppRepository", "RepositoryUri"]
      }
    },
    "ApiAppRepositoryURI": {
      "Description": "URI for the API application's ECR repository",
      "Value": {
        "Fn::GetAtt": ["ApiAppRepository", "RepositoryUri"]
      }
    },
    "ECSClusterName": {
      "Description": "Name of the ECS Cluster",
      "Value": {
        "Ref": "ECSCluster"
      }
    },
    "WebAppServiceName": {
      "Description": "Name of the web application's ECS Service",
      "Value": {
        "Ref": "WebAppService"
      }
    }
  }
}
