{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation stack for deploying web and API applications using ECR and ECS with a RedwoodJS application.",
  "Resources": {
    "PostgresDB": {
      "Type": "AWS::RDS::DBInstance",
      "DeletionPolicy": "Snapshot",
      "Properties": {
        "DBName": "MyDatabase",
        "AllocatedStorage": "20",
        "DBInstanceClass": "db.t3.micro",
        "Engine": "postgres",
        "EngineVersion": "14.9",
        "MasterUsername": {
          "Ref": "MasterUsername"
        },
        "MasterUserPassword": {
          "Ref": "MasterUserPassword"
        },
        "VPCSecurityGroups": [
          {
            "Ref": "AppSecurityGroup"
          }
        ],
        "DBSubnetGroupName": {
          "Ref": "MyDBSubnetGroup"
        },
        "MultiAZ": false,
        "PubliclyAccessible": true,
        "StorageType": "gp2"
      }
    },
    "AppSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group for RDS and Web Access",
        "VpcId": "vpc-030595db95854cc41",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 5432,
            "ToPort": 5432,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "MyDBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "A DBSubnetGroup for MyDatabase",
        "SubnetIds": ["subnet-09cba449eb7170193", "subnet-0917c46b110f7258d"]
      }
    },
    "WebAppRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": "redwood-web"
      }
    },
    "ApiAppRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": "redwood-api"
      }
    },
    "ECSCluster": {
      "Type": "AWS::ECS::Cluster",
      "Properties": {
        "ClusterName": "redwood-auth0-cluster"
      }
    },
    "RedwoodWebService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "ServiceName": "redwood-web-service",
        "Cluster": {
          "Ref": "ECSCluster"
        },
        "LaunchType": "FARGATE",
        "TaskDefinition": {
          "Ref": "RedwoodWebTaskDefinition"
        },
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": ["subnet-09cba449eb7170193", "subnet-0917c46b110f7258d"],
            "SecurityGroups": [
              {
                "Ref": "AppSecurityGroup"
              }
            ],
            "AssignPublicIp": "ENABLED"
          }
        }
      }
    },
    "RedwoodWebTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "redwood-web-task",
        "Cpu": "2048",
        "Memory": "4096",
        "NetworkMode": "awsvpc",
        "RequiresCompatibilities": ["FARGATE"],
        "ExecutionRoleArn": {
          "Ref": "ECSTaskExecutionRole"
        },
        "ContainerDefinitions": [
          {
            "Name": "redwood-web-container",
            "Image": "717824651453.dkr.ecr.us-east-1.amazonaws.com/stencil:latest",
            "PortMappings": [
              {
                "ContainerPort": 8910,
                "HostPort": 8910
              }
            ]
          }
        ]
      }
    },
    "ApiAppTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "redwood-api-task",
        "Cpu": "256",
        "Memory": "512",
        "NetworkMode": "awsvpc",
        "RequiresCompatibilities": ["FARGATE"],
        "ExecutionRoleArn": {
          "Ref": "ECSTaskExecutionRole"
        },
        "ContainerDefinitions": [
          {
            "Name": "redwood-api-container",
            "Image": "717824651453.dkr.ecr.us-east-1.amazonaws.com/redwood-api:latest",
            "PortMappings": [
              {
                "ContainerPort": 8911
              }
            ],
            "Environment": [
              {
                "Name": "DATABASE_URL",
                "Value": {
                  "Fn::Sub": [
                    "postgresql://${MasterUsername}:${MasterUserPassword}@${endpoint}/${DBName}",
                    {
                      "endpoint": {
                        "Fn::GetAtt": ["PostgresDB", "Endpoint.Address"]
                      }
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    "ApiAppService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "ServiceName": "redwood-api-service",
        "Cluster": {
          "Ref": "ECSCluster"
        },
        "LaunchType": "FARGATE",
        "TaskDefinition": {
          "Ref": "ApiAppTaskDefinition"
        },
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "Subnets": ["subnet-09cba449eb7170193", "subnet-0917c46b110f7258d"],
            "SecurityGroups": [
              {
                "Ref": "AppSecurityGroup"
              }
            ],
            "AssignPublicIp": "ENABLED"
          }
        }
      }
    },
    "ECSTaskExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AmazonECSTaskExecutionRolePolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "ecr:GetAuthorizationToken",
                    "ecr:BatchCheckLayerAvailability",
                    "ecr:GetDownloadUrlForLayer",
                    "ecr:GetRepositoryPolicy",
                    "ecr:DescribeRepositories",
                    "ecr:ListImages",
                    "ecr:DescribeImages",
                    "ecr:BatchGetImage",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Parameters": {
    "MasterUsername": {
      "Type": "String",
      "Description": "The database admin account username"
    },
    "MasterUserPassword": {
      "Type": "String",
      "Description": "The database admin account password",
      "NoEcho": true
    },
    "DBName": {
      "Type": "String",
      "Description": "The database name"
    },
    "WebAppImage": {
      "Type": "String",
      "Description": "The Docker image for the web application"
    },
    "ApiAppImage": {
      "Type": "String",
      "Description": "The Docker image for the API application"
    },
    "ECSClusterName": {
      "Type": "String",
      "Description": "The name of the ECS cluster"
    },
    "WebAppRepositoryName": {
      "Type": "String",
      "Description": "The name of the ECR repository for the web application"
    },
    "ApiAppRepositoryName": {
      "Type": "String",
      "Description": "The name of the ECR repository for the API application"
    }
  },
  "Outputs": {
    "DbEndpoint": {
      "Value": {
        "Fn::GetAtt": ["PostgresDB", "Endpoint.Address"]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DbEndpoint"
        }
      }
    },
    "DBName": {
      "Value": "MyDatabase",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DBName"
        }
      }
    },
    "WebAppRepositoryURI": {
      "Description": "URI for the web application's ECR repository",
      "Value": {
        "Fn::GetAtt": ["WebAppRepository", "RepositoryUri"]
      }
    },
    "ApiAppRepositoryURI": {
      "Description": "URI for the API application's ECR repository",
      "Value": {
        "Fn::GetAtt": ["ApiAppRepository", "RepositoryUri"]
      }
    },
    "ECSClusterName": {
      "Description": "Name of the ECS Cluster",
      "Value": {
        "Ref": "ECSCluster"
      }
    },
    "RedwoodWebServiceName": {
      "Description": "Name of the Redwood web application's ECS Service",
      "Value": {
        "Ref": "RedwoodWebService"
      }
    },
    "ApiAppServiceName": {
      "Description": "Name of the API application's ECS Service",
      "Value": {
        "Ref": "ApiAppService"
      }
    }
  }
}
